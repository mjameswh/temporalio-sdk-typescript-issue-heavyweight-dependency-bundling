  "compilerOptions": {
    "allowJs": false,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noStrictGenericChecks": true
  },
  "exclude": ["**/node_modules"]
}
